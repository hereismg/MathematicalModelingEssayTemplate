% ==============================================
% @brief    将阿拉伯数字转化为汉字
% @detail   目前只能转换10以内的数字
% ==============================================
\newcommand{\mcmCNumber}[1]{%
    \ifcase#1
        零%
    \or
        一%
    \or
        二%
    \or
        三%
    \or
        四%
    \or
        五%
    \or
        六%
    \or
        七%
    \or
        八%
    \or
        九%
    \or
        十%
    \else
        UnKnown%
    \fi
}


% ========================================
% @brief    一级标题（汉字编号）
% @detail   这是最高等级的章节命令
% ========================================
\newcommand{\mcmSection}[1]{
    % 章节计数器自增一
    \stepcounter{section}

    % 具体的标题
    \begin{center}
        \textbf{\fontsize{20}{1.5}{
            \mcmCNumber{\value{section}}\quad#1
        }}
    \end{center}
}



% ========================================
% @brief    二级标题（汉字标号）
